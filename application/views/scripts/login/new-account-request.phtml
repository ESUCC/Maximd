    $(function () {

        var currentradio = $("input[name='user_type']:checked")[0];

        /**
         * show/hide the next button based on radio
         */
        if(undefined!=currentradio) {
            $('#submit').show();
        }

        /**
         * attach function to update user description on change
         */
        $("input[name='user_type']").change(function (event) {
            var newRadio = $("input[name='user_type']:checked")[0];
            if (newRadio === currentradio)
                return;

            /* update user description */
            if(undefined!=newRadio) {
                $('#user_type_description').html(descriptionsArr[$(newRadio).val()]);
            } else {
                $('#user_type_description').html('');
            }

            /* display submit if radio has a value */
            if(undefined==newRadio) {
                $('#submit').hide();
            } else {
                $('#submit').show();
            }
        });

        /**
         * attach function to update user description on hover
         */
        $('.focusLink').add('.radio').hover(
            function () {
                /* update user description with hovered value */
                hoveredRadioValue = $(this).parent().children('input').val();
                $('#user_type_description').html(descriptionsArr[hoveredRadioValue]);
            },
            function () {
                /* update user description with selected value */
                var newRadio = $("input[name='user_type']:checked")[0];
                if(undefined!=newRadio) {
                    $('#user_type_description').html(descriptionsArr[$(newRadio).val()]);
                } else {
                    $('#user_type_description').html('');
                }
            }
        );

    });
